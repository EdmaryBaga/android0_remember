<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/with_blue">


    <ImageView
        android:id="@+id/ivLoginLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_margin="05.0dp"
        android:contentDescription="@string/describtion_image1"
        android:src="@drawable/android_girl" />

    <EditText
        android:id="@+id/etLoginUserName"
        android:layout_below="@id/ivLoginLogo"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/vector_person"
        android:drawablePadding="12dp"
        android:hint="@string/hint_user"
        android:inputType="text"
        android:autofillHints="@string/hint_user"
        />

    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_below="@id/etLoginUserName"
        android:layout_margin="12dp"
        android:layout_width="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/vector_lock"
        android:hint="@string/hint_password"
        android:drawablePadding="12dp"
        android:inputType="text"
        android:autofillHints="@string/hint_password"
    />

    <Button
        android:id="@+id/btnLoginLogin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_login"
        android:background="@color/design_default_color_on_primary"
        />

</RelativeLayout>
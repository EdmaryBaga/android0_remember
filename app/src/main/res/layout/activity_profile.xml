<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/with_blue">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@color/cardview_shadow_start_color"
        tools:text="Bienvenido Juan"
        />

    <TextView
        android:id="@+id/tvMainTitle"
        android:background="@color/blue_water"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/title_second_screes" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_launcher_background"
        android:src="@drawable/android_girl"
        android:contentDescription="@string/describtion_image1"
        />


    <EditText
        android:hint="@string/hint_edittext_name"
        android:inputType="text"
        android:background="@color/purple_200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="@string/describtion_image1"
        />


</LinearLayout>